---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import {getCollection} from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<style>
    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    ul li * {
        text-decoration: none;
        transition: 0.2s ease;
    }

    ul .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
    }

    ul .date {
        margin: 0;
        color: rgb(var(--gray));
    }

    ul li a {
        display: block;
    }

    ul li a:hover h4,
    ul li a:hover .date {
        color: rgb(var(--accent));
    }

    ul a:hover img {
        box-shadow: var(--box-shadow);
    }
</style>
<body>
<Header/>
<main>
    <h1>
        üêª Hello, I'm <span class="highlight">CityBear3</span>!
    </h1>
    <section>
        <p>
            Welcome to my personal blog! Here, I share my thoughts and experiences on various topics, including
            technology, programming, and more. Feel free to explore my posts and connect with me!
        </p>
    </section>
    <section>
        <ul>
            <li>
                <h2>New Article</h2>
                <a href={`/blog/${posts[0].id}/`}>
                    <img width={720} height={360} src={posts[0].data.heroImage} alt=""/>
                    <h4 class="title">{posts[0].data.title}</h4>
                    <p class="date">
                        <FormattedDate date={posts[0].data.pubDate}/>
                    </p>
                </a>
            </li>
        </ul>
    </section>
</main>
<Footer/>
</body>
</html>
